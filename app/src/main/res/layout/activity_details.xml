<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_background">

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_arrow"
                android:background="@null"
                android:contentDescription="Back" />

            <!-- Destination Name -->
            <TextView
                android:id="@+id/tv_destination_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mount Everest"
                android:textSize="18sp"
                android:textColor="@color/dark_text"
                android:layout_marginTop="8dp" />

            <!-- Location and Duration -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/drawable_image_1" />
                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nepal"
                    android:textSize="12sp"
                    android:textColor="@color/dark_text"
                    android:layout_marginEnd="16dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="17dp"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/drawable_image_2" />

                <TextView
                    android:id="@+id/tv_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 days"
                    android:textSize="12sp"
                    android:textColor="@color/dark_text" />
            </LinearLayout>

            <!-- Name Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textSize="18sp"
                android:textColor="@color/green"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tv_traveler_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ann Press"
                android:textSize="15sp"
                android:textColor="@color/dark_text"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Travel Dates:"
                android:textSize="18sp"
                android:textColor="@color/green"
                android:paddingTop="8dp" />

            <TextView
                android:id="@+id/tv_travel_dates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="December 15 - December 20"
                android:textSize="15sp"
                android:textColor="@color/dark_text"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Source:"
                android:textSize="18sp"
                android:textColor="@color/green"
                android:paddingTop="8dp" />

            <TextView
                android:id="@+id/tv_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delhi, India"
                android:textSize="15sp"
                android:textColor="@color/dark_text"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of People:"
                android:textSize="18sp"
                android:textColor="@color/green"
                android:paddingTop="8dp" />

            <TextView
                android:id="@+id/tv_total_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textSize="15sp"
                android:textColor="@color/dark_text"
                android:paddingBottom="8dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_male_count_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male Count:"
                    android:textSize="18sp"
                    android:textColor="@color/green"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/tv_female_count_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female Count:"
                    android:textSize="18sp"
                    android:textColor="@color/green" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_male_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="15sp"
                    android:textColor="@color/dark_text"
                    android:layout_marginEnd="30dp" />

                <TextView
                    android:id="@+id/tv_female_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="15sp"
                    android:paddingLeft="72dp"
                    android:textColor="@color/dark_text" />
            </LinearLayout>

            <!-- Budget Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Budget:"
                android:textSize="18sp"
                android:textColor="@color/green"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tv_budget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="360"
                android:textSize="15sp"
                android:textColor="@color/dark_text"
                android:layout_marginTop="4dp" />

            <!-- Contact Info Button -->
            <Button
                android:id="@+id/btn_contact_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_rectangle"
                android:text="Contact Info"
                android:textSize="18dp"
                android:drawableEnd="@drawable/drawable_image"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>